{
  "cli": {
    "version": ">= 7.8.0",
    "appVersionSource": "local"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "distribution": "internal",
      "channel": "preview",
      "android": {
        "buildType": "apk",
        "credentialsSource": "remote",
        "gradle": {
          "buildVariant": "release"
        }
      }
    },
    "production": {
      "channel": "preview",
      "android": {
        "credentialsSource": "remote"
      }
    },
    "release-apk": {
      "channel": "preview",
      "android": {
        "buildType": "apk",
        "credentialsSource": "remote",
        "gradle": {
          "buildVariant": "release"
        }
      }
    }
  },
  "submit": {
    "production": {}
  }
}
